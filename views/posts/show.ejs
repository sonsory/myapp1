<!DOCTYPE html>
<html>
  <head>
    <h3><% include ../partials/head %></h3>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>
<!-- main start -->

<!-- views/posts/show.ejs -->
<div class="show">
  <div class="buttons">
    <% if(user && user.equals(post.author._id)) { %>
      <form class="float_right" action="/posts/<%=post._id%>?_method=delete" method="post">
        <button type="button" onclick="confirm('Your post will be deleted')?this.parentElement.submit():null;">Delete</button>
      </form>
      <button class="float_right" onclick="location.href='/posts/<%= post._id %>/edit'">Edit</button>
    <% } %>
    <button class="float_left" onclick="location.href='/posts'">Back</button>
  </div>
  <h3><%= post.title %> </h3>
  <div class="content floats">
    <div class="info float_right">
      <div>
        Author : <%= post.author.nickname %>
      </div>
      <div class="timestamp"><span>Created:</span>
        <%= post.getCreatedTime() %>, <%= post.getCreatedDate() %>
      </div>
      <% if(post.updatedAt) { %>
        <div class="timestamp"><span>updated:</span>
          <%= post.getCreatedTime() %>, <%= post.getCreatedDate() %>
        </div>
      <% } %>
    </div>
    <div class="body"><%= post.body %></div>
  </div>
</div>

<!-- main end   -->
