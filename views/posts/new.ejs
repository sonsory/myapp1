<!DOCTYPE html>
<html>
  <head>
    <h3><% include ../partials/head %></h3>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>
      <!-- main start -->

<!-- views/posts/index.ejs -->
<div class="new">
  <div class= "buttons">
    <button onclick="location.href='/posts'">Back</Button>
  </div>
  <h3>New Post</h3>
  <form class="checkValidation" action="/posts" method="post">
    <div class="inputs">
      <div class="floats">
        <label>Title</label>
        <input class="cvRequired" type="text" name="post[title]" cvRqErrMsg="Title is required." cvRqerrTo="#cvErrTitle" value="">
        <div id="cvErrTitle" class="message"></div>
      </div>
      <div class="floats">
        <label>Author</label>
        <input disabled type="text" value="<%= user.nickname%>">
      </div>
      <div class="floats">
        <label>Body</label>
        <textarea class="cvRequired" name="post[body]" cvRqErrMsg="Body is required." cvRqErrTo="#cvErrBody"></textarea>
        <div id="cvErrBody" class="message"></div>
      </div>
    </div>
      <div class="buttons">
        <button type="submit">Submit</button>
      </div>
  </form>
</div>

  <!-- main end -->

      <footer>
        <% include ../partials/footer %>
      </footer>
    </body>
  </html>
